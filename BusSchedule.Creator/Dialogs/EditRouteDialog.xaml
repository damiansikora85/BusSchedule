<Window x:Class="BusSchedule.Creator.Dialogs.EditRouteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusSchedule.Creator.Dialogs"
        mc:Ignorable="d"
        Title="Edycja trasy" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="StationsList" ItemsSource="{Binding Stations}"/>
        <ListBox Grid.Column="1" ItemsSource="{Binding Route}"/>
        <Button Grid.ColumnSpan="2" Grid.Row="1" Content="Zapisz" Height="64"/>
    </Grid>
</Window>
