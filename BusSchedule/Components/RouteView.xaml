<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusSchedule.Components.RouteView">
  <ContentView.Content>
        <Frame Margin="4" BackgroundColor="{Binding RouteColor}" CornerRadius="5" Padding="0">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" Command="{Binding TapCommand}"/>
            </Frame.GestureRecognizers>
            <Label Text="{Binding Name}" FontSize="36" FontAttributes="Bold"  TextColor="{Binding RouteTextColor}" VerticalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        </Frame>
    </ContentView.Content>
</ContentView>