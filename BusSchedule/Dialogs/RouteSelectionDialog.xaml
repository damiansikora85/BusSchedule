<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup
    x:Class="BusSchedule.Dialogs.RouteSelectionDialog"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Size="325,150">
    <Grid
        Margin="32,2"
        HorizontalOptions="FillAndExpand"
        RowDefinitions="*,*,*"
        Padding="16"
        RowSpacing="8"
        BackgroundColor="White">
        <Label
            FontSize="Large"
            Text="Wybierz kierunek:"
            TextColor="Black" />
        <Button
            Grid.Row="1"
            BackgroundColor="White"
            Clicked="FirstRouteClicked"
            Text="{Binding FirstDirection}"
            TextColor="Black" />
        <Button
            Grid.Row="2"
            BackgroundColor="White"
            Clicked="SecondRouteClicked"
            Text="{Binding SecondDirection}"
            TextColor="Black" />
    </Grid>
</mct:Popup>