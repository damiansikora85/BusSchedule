<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage  xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusSchedule.Dialogs.RouteSelectionDialog">
    <Frame BackgroundColor="#80000000">
        <StackLayout BackgroundColor="White" VerticalOptions="Center" Padding="16" Spacing="8">
            <Label Text="Wybierz kierunek:" TextColor="Black" FontSize="Large"/>
            <Button Text="{Binding FirstDirection}" Clicked="FirstRouteClicked" BackgroundColor="White" TextColor="Black"/>
            <Button Text="{Binding SecondDirection}" Clicked="SecondRouteClicked" BackgroundColor="White" TextColor="Black"/>
        </StackLayout>
    </Frame>
</pages:PopupPage>