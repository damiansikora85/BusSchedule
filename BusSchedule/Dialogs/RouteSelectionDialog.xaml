<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup
    x:Class="BusSchedule.Dialogs.RouteSelectionDialog"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Frame BackgroundColor="#80000000">
        <StackLayout
            Padding="16"
            BackgroundColor="White"
            Spacing="8"
            VerticalOptions="Center">
            <Label
                FontSize="Large"
                Text="Wybierz kierunek:"
                TextColor="Black" />
            <Button
                BackgroundColor="White"
                Clicked="FirstRouteClicked"
                Text="{Binding FirstDirection}"
                TextColor="Black" />
            <Button
                BackgroundColor="White"
                Clicked="SecondRouteClicked"
                Text="{Binding SecondDirection}"
                TextColor="Black" />
        </StackLayout>
    </Frame>
</mct:Popup>