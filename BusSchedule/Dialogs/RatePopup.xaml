<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup
    x:Class="BusSchedule.Dialogs.RatePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <VerticalStackLayout
        Margin="8"
        Padding="16"
        BackgroundColor="White"
        Spacing="32"
        VerticalOptions="Center">
        <Label
            FontSize="Large"
            Text="Czy podoba Ci się aplikacja?"
            TextColor="#404040" />
        <Label
            HorizontalTextAlignment="Center"
            Text="Dziękujemy za korzystanie z naszej aplikacji. Jeśli jest ona dla Ciebie przydatna to daj znać innym i wystaw ocenę w sklepie Google Play."
            TextColor="#404040" />
        <HorizontalStackLayout Margin="0,8" HorizontalOptions="End">
            <Button
                BackgroundColor="Transparent"
                Clicked="OnRateLaterClicked"
                Text="Nie teraz "
                TextColor="#237194" />
            <Button
                BackgroundColor="#237194"
                Clicked="OnRateClicked"
                Text="Oceń teraz"
                TextColor="White" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</mct:Popup>