<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="BusSchedule.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="BgBlue" TargetType="View">
                <Setter Property="BackgroundColor" Value="#237194" />
            </Style>
            <Style x:Key="DefaultText" TargetType="Label">
                <Setter Property="TextColor" Value="#797979" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>